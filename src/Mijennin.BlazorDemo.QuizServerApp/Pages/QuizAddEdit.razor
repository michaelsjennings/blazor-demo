@page "/quiz-add"
@page "/quiz-edit/{id}"
@inherits QuizAddEditBase

<h3>Quiz Add/Edit</h3>

<EditForm Model="@Quiz" OnSubmit="HandleValidSubmit">

    <div class="form-group row">
        <label for="Title" class="col-sm-3 col-form-label text-right">Title:</label>
        <div class="col-sm-7">
            <InputText @bind-Value="@Quiz.Title" />
        </div>
    </div>

    <div class="form-group-row">
        <div class="col-sm-0">
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
            <a class="btn btn-sm btn-secondary" href="/quiz-list">Cancel</a>
        </div>
    </div>

</EditForm>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Question</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Questions)
        {
            <tr>
                <td>@question.QuestionNumber</td>
                <td>@question.QuestionText</td>
                <td>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>